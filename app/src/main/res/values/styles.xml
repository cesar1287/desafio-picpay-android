<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_ios</item>
    </style>

    <style name="MainTitle">
        <item name="android:textSize">@dimen/default_title_size</item>
        <item name="android:textColor">@color/title_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReceiptTitle">
        <item name="android:textSize">@dimen/receipt_title_size</item>
        <item name="android:textColor">@color/title_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">@dimen/default_subtitle_size</item>
        <item name="android:textColor">@color/title_white</item>
    </style>

    <style name="Edit">
        <item name="android:textSize">@dimen/default_subtitle_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ReceiptTransaction">
        <item name="android:textSize">@dimen/receipt_transaction_size</item>
        <item name="android:textColor">@color/title_white</item>
    </style>

    <style name="ReceiptTotal">
        <item name="android:textSize">@dimen/default_monetary_size</item>
        <item name="android:textColor">@color/title_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ValuePayment">
        <item name="android:textSize">@dimen/default_value_size</item>
        <item name="android:textColor">@color/title_white</item>
    </style>

    <style name="Monetary">
        <item name="android:textSize">@dimen/default_monetary_size</item>
        <item name="android:textColor">@color/title_white</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:background">@drawable/custom_buttom</item>
        <item name="android:textSize">@dimen/default_button_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/title_white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:textSize">@dimen/default_text_input_size</item>
        <item name="android:textColorHint">@color/hint_text_input</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textSize">@dimen/default_text_input_size</item>
        <item name="android:textColor">@color/title_white</item>
    </style>
</resources>
