<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentLayout"
        android:background="@color/colorPrimary"
>

    <TextView
            android:id="@+id/rvCreditCardsItemBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/defaultMargin"
            android:layout_marginBottom="@dimen/defaultMargin"
            android:layout_marginStart="@dimen/defaultMargin"
            android:textSize="16sp"
            android:textColor="@color/title_white"
            android:text="@string/credit_card_brand_label"
    />

    <TextView
            android:id="@+id/rvCreditCardsItemNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvCreditCardsItemBrand"
            app:layout_constraintTop_toBottomOf="@id/rvCreditCardsItemBrand"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBaseline_toBaselineOf="@id/rvCreditCardsItemBrand"
            android:layout_marginEnd="@dimen/defaultMargin"
            android:textSize="16sp"
            android:textColor="@color/title_white"
            tools:text="1111"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
