<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/contentLayout"
        android:background="@color/colorPrimary"
>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rvContactsItemAvatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/minimumMargin"
            android:layout_marginBottom="@dimen/minimumMargin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/ic_launcher"
    />

    <TextView
            android:id="@+id/rvContactsItemUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/rvContactsItemAvatar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/defaultMargin"
            android:layout_marginStart="@dimen/defaultMargin"
            android:textSize="16sp"
            android:textColor="@color/title_white"
            tools:text="aliceromero"
    />

    <TextView
            android:id="@+id/rvContactsItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/rvContactsItemAvatar"
            app:layout_constraintTop_toBottomOf="@id/rvContactsItemUsername"
            android:layout_marginStart="@dimen/defaultMargin"
            android:textSize="14sp"
            android:textColor="@color/title_white"
            android:alpha="0.5"
            tools:text="Alice Romero"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
